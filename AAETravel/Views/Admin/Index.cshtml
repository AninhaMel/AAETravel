@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="agencias-table">
        <h4>Agências:</h4>
        <div class=" agencia-row">
            <div class="col-sm-8">
                <img src="~/img/experiencias/agencias/Booking.png" alt="Booking Logo"> Booking.com
            </div>
            <div class="col-sm-4 text-right">5 acessos</div>
        </div>
        <div class="row agencia-row">
            <div class="col-sm-8">
                <img src="~/img/experiencias/agencias/Expedia.png" alt="Expedia Logo"> Expedia
            </div>
            <div class="col-sm-4 text-right">1 acesso</div>
        </div>
        <div class="row agencia-row">
            <div class="col-sm-8">
                <img src="~/img/experiencias/agencias/STA Travel.png" alt="STA Travel Logo"> STA Travel
            </div>
            <div class="col-sm-4 text-right">9 acessos</div>
        </div>
        <div class="row agencia-row">
            <div class="col-sm-8">
                <img src="~/img/experiencias/agencias/TripAdvisor.png" alt="TripAdvisor Logo"> TripAdvisor
            </div>
            <div class="col-sm-4 text-right">21 acessos</div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <img src="~/img/Admin/com-login.png" alt="Gráfico Acessos com Login">
                <div class="card-body">
                    <p class="card-text">Acessos com Login</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <img src="~/img/Admin/sem-login.png" alt="Gráfico Acessos sem Login">
                <div class="card-body">
                    <p class="card-text">Acessos sem Login</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-sm-6">
            <div class="card">
                <img src="~/img/Admin/acessos-experiencias.png" alt="Gráfico Acessos Experiências">
                <div class="card-body">
                    <p class="card-text">Acessos Experiências</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <img src="~/img/Admin/acessos-paises.png" alt="Gráfico Acesso dos Países">
                <div class="card-body">
                    <p class="card-text">Acesso dos Países</p>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    body {
    background-color: black; 
    color: #e0e0e0; 
    font-family: 'Roboto', sans-serif;
}

.container {
    z-index: -1;
    width: 60%;
    padding: 2rem 5%;
    margin: 0 auto;
}

.agencias-table {
    background-color: #282828;
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 2rem;
    filter: drop-shadow(5px 5px 10px rgba(122, 122, 122, 0.386));
}

.agencias-table h4 {
    color: #7748CF;
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
}

.agencia-row {
    background-color: #333333;
    padding: 15px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
    transition: background-color 0.3s ease;
}

.agencia-row:hover {
    background-color: #7748CF;
}

.agencia-row img {
    margin-right: 12px;
    border-radius: 50%;
    width: 45px;
    height: 45px;
}

.card {
    background-color: #232323;
    border: none;
    border-radius: 12px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.6);
    margin-bottom: 2rem;
    transition: transform 0.3s ease;
}

.card:hover {
    transform: translateY(-10px);
}

.card img {
    width: 100%;
    border-radius: 12px 12px 0 0;
    object-fit: cover;
}

.card-body {
    padding: 1.5rem;
    text-align: center;
}

.card-text {
    color: #7748CF;
    font-size: 1.25rem;
    font-weight: bold;
    margin-top: 1rem;
}

.row {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem; 
}

.col-sm-6 {
    flex: 1 1 calc(50% - 2rem); 
}

/* Scrollbar customizado */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: #1e1e1e;
}

::-webkit-scrollbar-thumb {
    background-color: #7748CF;
    border-radius: 10px;
    border: 2px solid #1e1e1e;
}

</style>