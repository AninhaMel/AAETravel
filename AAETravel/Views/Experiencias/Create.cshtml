@model AAETravel.Models.Experiencia

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="custom-container mt-4">
    <h1>Criar Nova Experiência</h1>

    <h4>Experiência</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input required asp-for="Nome" class="form-control" placeholder='ex: "Natureza..."' />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cor" class="control-label"></label>
                    <input required asp-for="Cor" class="form-control" type="number"
                        placeholder='ex: "#FFFF " (codigo hexadecimal)' />
                    <span asp-validation-for="Cor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Foto" class="control-label"></label>
                    <input required asp-for="Foto" class="form-control" type="file" />
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Onda" class="control-label"></label>
                    <input required asp-for="Onda" class="form-control" type="file" />
                    <span asp-validation-for="Onda" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fundo" class="control-label"></label>
                    <input required asp-for="Fundo" class="form-control" type="file" />
                    <span asp-validation-for="Fundo" class="text-danger"></span>
                </div>
                <div class="form-buttons">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: black;
        color: white;
    }

    .custom-container {
        width: 70vw;
        margin: 0 auto;
        padding: 20px;
        border: 3px solid white;
        box-shadow: 0 4px 8px rgba(128, 0, 128, 0.5);
        border-radius: 10px;
        background-color: #1c1c1c;
    }

    h1,
    h4 {
        color: white;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border: 1px solid #9b30ff;
    }

    .form-control:focus {
        border-color: #6a0dad;
    }
</style>