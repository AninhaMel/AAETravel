@model AAETravel.Models.Experiencia

@{
    ViewData["Title"] = "Excluir";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="custom-container mt-4">
    <h1>Excluir</h1>
    <h3>Tem certeza de que deseja excluir isso?</h3>
    <div>
        <h4>ExperiÃªncia</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cor)
                @if (!string.IsNullOrEmpty(Model.Cor))
                {
                    <div class="color-preview" style="background-color: @Model.Cor;"></div>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fundo)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Fundo != null && Model.Fundo != "")
                {
                    <img src="@Model.Fundo" alt="Imagem Fundo" class="image-preview" />
                }
                else
                {
                    @Html.DisplayFor(model => model.Fundo)
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Onda)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Onda != null && Model.Onda != "")
                {
                    <img src="@Model.Onda" alt="Imagem Onda" class="image-preview" />
                }
                else
                {
                    @Html.DisplayFor(model => model.Onda)
                }
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="btn-group">
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: black;
        color: white;
    }

    .custom-container {
        width: 70vw;
        margin: 0 auto;
        padding: 20px;
        border: 3px solid white;
        box-shadow: 0 4px 8px rgba(128, 0, 128, 0.5);
        border-radius: 10px;
        background-color: #1c1c1c;
    }

    h1,
    h4 {
        color: white;
    }

    .dl-horizontal dt {
        font-weight: bold;
    }

    .dl-horizontal dd {
        margin-left: 0;
    }

    .image-preview {
        max-width: 100%;
        height: auto;
        margin-top: 10px;
    }

    .color-preview {
        width: 100px;
        height: 50px;
        border: 1px solid #ccc;
        display: inline-block;
        vertical-align: middle;
        margin-left: 10px;
    }

    .btn-secondary {
        background-color: #2c2c2c;
        border-color: #2c2c2c;
    }

    .btn-secondary:hover {
        background-color: #1a1a1a;
        border-color: #1a1a1a;
    }

    .btn-group {
        gap: 10px;
    }
</style>