@{
    ViewData["Title"] = "EditarPerfil";
}
<link rel="stylesheet" href="~/css/editar-perfil.css">


<body>

    <main>
        <div class="container">
            <div class="bloco1">
                <div class="editar-perfil">
                    <div class="editar">
                        <h1>Editar Perfil</h1>
                    </div>
                    <div class="logo">
                        <img src="~/img/outros/TCC (36).png">
                    </div>
                    <button>
                        Editar Foto
                    </button>
                </div>
            </div>

            <div class="bloco2">
                <form>
                    <label for="nome">Nome:</label>
                    <input type="text" id="nome" name="nome" required placeholder="ex...Ricardo Bueno...">

                    <label for="telefone">Telefone:</label>
                    <input type="tel" id="telefone" name="telefone" required placeholder="(xx) xxxxx-xxxx">

                    <label for="descricao">Descrição:</label>
                    <input type="text" id="descricao" name="descricao" placeholder="ex...Gosto de viagens...">

                    <label for="cidade">Sua Cidade:</label>
                    <input type="text" id="cidade" name="cidade" placeholder="ex...Bauru-SP...">

                    <input type="submit">
                </form>
            </div>
        </div>
    </main>

</body>
