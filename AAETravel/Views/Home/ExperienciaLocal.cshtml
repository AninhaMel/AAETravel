@model AAETravel.ViewModels.ExperienciaLocalVM
@{
    ViewData["Title"] = "ExperienciaLocal";
}
<link rel="stylesheet" href="~/css/ExperienciaLocal.css">

<body>

    @foreach (var experiencia in Model.Experiencias)
    {
        <header id="header">
            <nav>
                <div class="logo">
                    <a href="index.html">
                        <img src="~/img/outros/logo.png">
                    </a>
                </div>
                <h3>EXPLORE O MUNDO!</h3>
                <div class="user">
                    <img src="~/img/outros/icon-user">
                </div>
            </nav>
            <div class="caixa">
                <h1>@experiencia.Nome</h1>
                <a href="#locais" style="background-color: @experiencia.Cor;">
                    Confira as atrações
                </a>
            </div>
            <img src="@experiencia.Onda" style="filter=drop-shadow(0 0 100px @experiencia.Cor);">
            <div class="back">
                <a asp-action="Experiencia" asp-controller="Home">
                    <i class="bi bi-arrow-left-short"></i>
                </a>
            </div>
        </header>
    }

    <section id="locais">
        @foreach (var local in Model.Locais)
        {
            <div class="lugares">
                <img src="@local.Foto">
                <h1>@local.Nome</h1>
                @foreach (var experiencia in Model.Experiencias)
                {
                    <a asp-action="Local" style="background-color: @experiencia.Cor;">Saiba Mais</a>
                }
            </div>
        }
    </section>
    <div class="banner">
        <img src="assets/img/outros/banner.png">
    </div>

    @foreach (var experiencia in Model.Experiencias)
    {
        <footer>
            <div class="inf-adicionais" style="background-color: @experiencia.Cor;">
                <h3>INFORMAÇÕES ADICIONAIS:</h3>
                <nav>
                    <a href="https://www.facebook.com/?locale=pt_BR">
                        <div class="i1">
                            <i class="bi bi-facebook"></i>
                        </div>
                    </a>
                    <a href="https://www.instagram.com/">
                        <div class="i2">
                            <i class="bi bi-instagram"></i>
                        </div>
                    </a>
                    <a
                        href="https://api.whatsapp.com/send?phone=5514991078235&text=Vim%20pelo%20site%20AEE%20Travel,%20tenho%20uma%20duvida!">
                        <div class="i3">
                            <i class="bi bi-whatsapp"></i>
                        </div>
                    </a>
                    <a href="https://www.youtube.com/">
                        <div class="i4">
                            <i class="bi bi-youtube"></i>
                        </div>
                    </a>
                    <a href="https://twitter.com/?lang=pt-br">
                        <div class="i5">
                            <i class="bi bi-twitter-x"></i>
                        </div>
                    </a>
                    <a href="https://www.google.com/intl/pt-BR/gmail/about/">
                        <div class="i6">
                            <i class="bi bi-envelope"></i>
                        </div>
                    </a>
                </nav>
            </div>
            <div class="box">
                <div class="primeira-parte">
                    <h1 style="text-decoration: underline @experiencia.Cor;">AAE Travel</h1>
                    <p>'Viajar - é a coisa mais magnífica do mundo. Quanto mais você viaja, mais aprende'. Como Byl Bryson
                        um famoso escrito norte americano dizia. O processo de aprendizado também está relacionado à memória
                        que é o lema do nosso site AAE Travel Crie memórias, porque viajar é realmente criar memóorias.
                        Muitas das melhores lembranças que temos é em viagens.</p>
                </div>
                <div class="contatos">
                    <h1 style="text-decoration: underline @experiencia.Cor;">Contato</h1>
                    <ul>
                        <li>
                            <i class="bi bi-house"></i>
                            Barra Bonita, SP, Brasil.
                        </li>
                        <li>
                            <i class="bi bi-envelope"></i>
                            AAEtravel1234@gmail.com
                        </li>
                        <li>
                            <i class="bi bi-telephone"></i>
                            +55 234 567 88
                        </li>
                        <li>
                            <a href="sobre-nos.html">
                                <i class="bi bi-people"></i>
                                Sobre Nós
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="explore">
                    <h1 style="text-decoration: underline @experiencia.Cor;">Explore</h1>
                    <ul>
                        <a href="index.html">
                            <i class="bi bi-house"></i>
                            Inicio
                        </a>
                        <a href="#paises">
                            <i class="bi bi-globe2"></i>
                            Países
                        </a>
                        <a href="#agencias">
                            <i class="bi bi-geo-alt"></i>
                            Agências
                        </a>
                        <a href="destinos-salvos.html">
                            <i class="bi bi-heart"></i>
                            Favoritados
                        </a>
                    </ul>
                </div>
            </div>
        </footer>
    }

</body>

</html>