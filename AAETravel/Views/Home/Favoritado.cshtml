@model IEnumerable<AAETravel.Models.Lista>
@{
    ViewData["Title"] = "Favoritados";
}
<link rel="stylesheet" href="~/css/destinos-salvos.css">
<link rel="shortcut icon" href="~/img/outros/favcon.png" type="image/x-icon">


<header id="header">
    <a asp-action="Index" asp-controller="Home">
        <div class="voltar">
            <i class="bi bi-box-arrow-left"></i>
            Voltar
        </div>
    </a>
    <a style="height: 100%;" asp-action="Index" asp-controller="Home">
        <div class="logo">
            <img src="/img/outros/logo.png">
        </div>
    </a>
    <div class="user">
        <partial name="_LoginPartial"></partial>
    </div>
</header>
<h1 style="color: white; text-align: center; margin-top: 50px; text-decoration: underline #7748CF;">Favoritos:</h1>
<section>
    @if (Model != null)
    {
        @foreach (var lista in Model)
        {
            <div class="lugares">
                <img src="@lista.Local.Foto">
                <h1>@lista.Local.Nome</h1>
                <a href="informacoes.html">Saiba Mais</a>
            </div>
        }
    }
    else
    {
        <p class="else">Você ainda não tem favoritos.</p>
    }
</section>