<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Admin/admin.css">
    <link rel="shortcut icon" href="~/img/outros/favcon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <title>Admin - area</title>
</head>

<body>
    <header>
        <div class="logo" onclick="toggleSidebar()">
            <img src="~/img/outros/logo.png" alt="AAE Travel Logo" />
        </div>
        <div class="perfil">
            <partial name="_LoginPartial"></partial>
        </div>
    </header>

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<div id="sidebar" class="sidebar">
    <div class="sidebar-logo" onclick="toggleSidebar()"><b>AAE</b> Travel</div>
    <div class="menu">
        <a asp-action="Index" asp-controller="Admin">
            <i class="bi bi-journal-richtext"></i>
            Dashboard
        </a>
        <a class="@(ViewData["Title"].ToString() == "Experiencia" ? "active bg-gradient-warning" : "")"
            asp-controller="Experiencias" asp-action="Index">
            <i class="bi bi-airplane-engines"></i>
            ExperiÃªncia
        </a>
        <a class="@(ViewData["Title"].ToString() == "Local" ? "active bg-gradient-warning" : "")"
            asp-controller="Locais" asp-action="Index">
            <i class="bi bi-geo-fill"></i>
            Local
        </a>
        <a  class="@(ViewData["Title"].ToString() == "Pais" ? "active bg-gradient-warning" : "")"
            asp-controller="Paises" asp-action="Index">
            <i class="bi bi-globe2"></i>
            Pais
        </a>
    </div>
    <a style="margin-bottom: 10%;" asp-action="Index" asp-controller="Home">
        <i class="bi bi-door-open"></i>
        Sair
    </a>
</div>
<script src="~/js/adimin.js"></script>

</html>